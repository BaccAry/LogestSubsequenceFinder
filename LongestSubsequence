import java.util.Scanner;

public class LongestSubsequence {

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);
		String input = scanner.nextLine();
		String[] tabS = input.split(" ");
		int[] numbers = new int[tabS.length];
		int x = 0;
		for (String s : tabS) {
			numbers[x] = Integer.parseInt(s);
			x++;
		}
		int length = 1, lengthmax = 1;
		int index = 0;
		for (int a = 1; a < numbers.length; a++) {
			if (numbers[a - 1] <= numbers[a]) {
				length++;
				if (length > lengthmax) {
					lengthmax = length;
					index = a;
				}
			}
			else {
				length = 1;
			}
		}
		System.out.println("Length of the longest subsequence: " + lengthmax);
		int sum = 0;
		for(int a = (index - lengthmax) + 1; a <= index; a++) {
			System.out.print(numbers[a] + " ");
			sum += numbers[a];
		}
		System.out.println("Sum of the longest subsequence: " + sum);
		scanner.close();

	}

}
